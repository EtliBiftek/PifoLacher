{
  "name": "minecraft-launcher",
  "version": "0.1.1",
  "description": "PifoLacher - Minecraft Java Launcher",
  "main": "electron/main.js",
  "scripts": {
    "start": "node scripts/start-detached.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -w --x64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.pifo.launcher",
    "productName": "PifoLacher",
    "copyright": "Pifo",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "electron/**",
      "scripts/**",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "executableName": "PifoLacher"
    }
  },
  "keywords": [],
  "author": "Pifo",
  "license": "ISC",
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "minecraft-launcher-core": "^3.18.2"
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12"
  }
}
